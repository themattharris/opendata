
    <div class="row-fluid">
      <div class="span3">
        <div class="well sidebar-nav">
          <ul class="nav nav-list">
            <li class="nav-header">Tag Listing</li>
            <% @tags.each do |tag| %>
            <li><%= link_to tag.title, tag_path(tag.slug) %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="span9">
        <div class="hero-unit">
          <% if @tag.nil? %>
          <h1>Tag Listings</h1>
          <% else %>
          <h1>Tag Listing for: <%= h @tag.title %></h1>
          <% end %>
        </div>

        <div class="row-fluid">
        <%= render(:partial => '/shared/data_sources_grid', :locals => { :data_sources => @tag.data_sources }) if !@tag.nil? && @tag.data_sources.count > 0 %>
        </div>
      </div>
    </div>